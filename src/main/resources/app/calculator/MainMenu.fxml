<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="app.calculator.MainMenuController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox alignment="CENTER" spacing="10" layoutX="150" layoutY="50">
            <Label text="Calculadora - Menu principal" style="-fx-font-size: 18px;" />
            <Button text="Operaciones basicas" onAction="#openBasic" />
            <Button text="Operaciones con Vectores" onAction="#openVectors" />
            <Button text="Operaciones de matrices" onAction="#openMatrices" />
            <Button text="Sistemas de ecuaciones" onAction="#openSystems" />
            <Button text="Salir del programa" onAction="#exitApplication" />
        </VBox>
    </children>
</AnchorPane>
