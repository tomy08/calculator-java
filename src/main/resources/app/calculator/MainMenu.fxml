<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #f8fafc, #e2e8f0);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="app.calculator.MainMenuController">
    <children>
        <VBox alignment="CENTER" layoutX="56.0" layoutY="81.0" prefWidth="500" spacing="18.0" style="-fx-background-color: white; -fx-background-radius: 14; -fx-padding: 28; -fx-effect: dropshadow(gaussian, rgba(44,62,80,0.08), 14, 0, 0, 7);">
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #263445; -fx-padding: 0 0 10 0;" text="Calculadora - Menú Principal" />

            <Button onAction="#openBasic" style="-fx-background-radius: 8; -fx-font-size: 15px;" styleClass="menu-button" text="Operaciones básicas" />
            <Button onAction="#openVectors" style="-fx-background-radius: 8; -fx-font-size: 15px;" styleClass="menu-button" text="Operaciones con Vectores" />
            <Button onAction="#openMatrices" style="-fx-background-radius: 8; -fx-font-size: 15px;" styleClass="menu-button" text="Operaciones de Matrices" />
            <Button onAction="#openSystems" style="-fx-background-radius: 8; -fx-font-size: 15px;" styleClass="menu-button" text="Sistemas de Ecuaciones" />
            <Button onAction="#exitApplication" style="-fx-background-radius: 8; -fx-font-size: 15px;" styleClass="menu-button-exit" text="Salir del Programa" />
        </VBox>
    </children>
</AnchorPane>